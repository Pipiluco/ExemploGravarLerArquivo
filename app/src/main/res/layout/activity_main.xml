<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCaminhoArquivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnExplorerImagens" />

    <Button
        android:id="@+id/btnExplorerImagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Imagens" />

    <Button
        android:id="@+id/btnExplorerArquivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Arquivos" />

    <Button
        android:id="@+id/btnExplorerPastas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnExplorerImagens"
        android:text="Pastas" />

</RelativeLayout>